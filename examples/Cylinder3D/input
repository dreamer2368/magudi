# Input file to magudi for simulation of flow over a cylinder
# Written by Ramanathan Vishnampet

# Filenames, etc.
output_prefix = "Cylinder"
grid_file = "Cylinder.xyz"
target_state_file = "Cylinder.target.q"
boundary_condition_file = "bc.dat"
decomposition_map_file = "decomp.map"

# Simulation flags
include_viscous_terms = true
use_constant_CFL_mode = false
use_target_state = true
use_manual_domain_decomposition = true

# Physical constants
Reynolds_number = 7500.
Prandtl_number = 0.75
viscosity_power_law_exponent = 0.
bulk_viscosity_ratio = 0.

# Periodicity
grid001/dir2/periodicity_type = 'OVERLAP'
grid001/dir3/periodicity_type = 'PLANE'
grid001/dir3/periodic_length = 2.

# Discretization scheme
defaults/discretization_scheme = "SBP 2-4"

# Time stepping options
time_step_size = 0.0003
number_of_timesteps = 500000
report_interval = 10
save_interval = 2000

# Artificial dissipation
add_dissipation = true
composite_dissipation = false
dissipation_amount = 0.06

# Sponge options
defaults/sponge_amount = 2.

# Solution limits
enable_solution_limits = true
minimum_density = 0.1
minimum_temperature = 0.05
maximum_density = 5.
maximum_temperature = 4.

# Penalty parameters
defaults/viscous_penalty_amount = 0.
patches/cylinder/viscous_penalty_amount1 = 1.
