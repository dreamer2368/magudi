# mixinglayer.inp

# Filenames, etc.
output_prefix = "ReactiveJet"
grid_file = "ReactiveJet.xyz"
initial_condition_file = "ReactiveJet.ic.q"
boundary_condition_file = "bc.dat"
target_state_file = "ReactiveJet.target.q"
target_mollifier_file = "ReactiveJet.target_mollifier.f"
control_mollifier_file = "ReactiveJet.control_mollifier.f"
decomposition_map_file = "decomp.map"

# Grid information
nx = 257
ny = 129
xmin_interior = 0
xmax_interior = 40
ymin_interior = -16
ymax_interior = 16
xmin_outer = -8
xmax_outer = 48
ymin_outer = -24
ymax_outer = 24
stretch_y = true

# Planar jet properties
jet_diameter = 2.0
jet_velocity = 0.3
jet_temperature = 298.15
virtual_origin = -15.0

# Simulation flags
include_viscous_terms = true
use_constant_CFL_mode = true
use_target_state = true
curvilinear_domain = false
compute_time_average = false
use_manual_domain_decomposition = false

# Non-dimensional constants
Reynolds_number = 10000.0
Prandtl_number = 0.7
Schmidt_number_1 = 0.7
Schmidt_number_2 = 0.7
viscosity_power_law_exponent = 0.666
bulk_viscosity_ratio = 0.6
ratio_of_specific_heats = 1.4

# Chemistry
number_of_species = 2
number_of_reactions = 1
initial_fuel_mass_fraction = 1.0
initial_oxidizer_mass_fraction = 0.233
initial_mixture_fraction = 0.1
stoichiometric_ratio = 8.0
heat_release = 0.86
Zel_Dovich = 6.0
Damkohler_number = 10000.0

# Discretization scheme
defaults/discretization_scheme = "SBP 4-8"

# Time stepping options
time_step_size = 0.004
cfl = 0.3
number_of_timesteps = 100000
report_interval = 10
save_interval = 500

# Artificial dissipation
add_dissipation = true
dissipation_amount = 0.01

# Solution limits
enable_solution_limits = false
minimum_density = 0.01
minimum_temperature = 0.05
maximum_density = 10.
maximum_temperature = 100.
minimum_massFraction = -0.1
maximum_massFraction = 1.1

# Damping
defaults/sponge_amount = 0.2
defaults/viscous_penalty_amount = 0.

# Localized ignition
patches/localizedIgnition/amplitude = 0.8
patches/localizedIgnition/radius = 2.0
patches/localizedIgnition/origin_x = 8.0
patches/localizedIgnition/time_start = 2000.0
patches/localizedIgnition/time_duration = 0.2

# Adjoint optimization flags
disable_adjoint_solver = true
baseline_prediction_available = false
cost_functional_type = "TEMPERATURE"
controller_type = "FLAME_IGNITION"
use_continuous_adjoint = true
number_of_control_iterations = 0
gradient_buffer_size = 100
