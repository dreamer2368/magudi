# magudi.inp
# Written by Seung Whan Chung

# Filenames, etc.
output_prefix = "OscillatingCylinder"
grid_file = "OscillatingCylinder.xyz"
boundary_condition_file = "bc.dat"

# Simulation flags
include_viscous_terms = true
use_constant_CFL_mode = false
curvilinear_domain = false
compute_time_average = false

# Controller flags
enable_controller = false
controller_switch = false

# Functional flags
enable_functional = false
cost_functional_type = "SOUND"

# Adjoint optimization flags
enable_adjoint_solver = false
baseline_prediction_available = false
use_continuous_adjoint = false
controller_buffer_size = 800

# Gradient accuracy options
check_gradient_accuracy = true
number_of_control_iterations = 32
initial_actuation_amount = 1e2
restart_control_iteration = 0
actuation_amount_geometric_growth = 0.5623413251903491

# Physical constants
Reynolds_number = 3000.
Prandtl_number = 0.7
viscosity_power_law_exponent = 0.
bulk_viscosity_ratio = 0.

# Discretization scheme
defaults/discretization_scheme = "SBP 3-6"

# Time stepping options
time_step_size = 0.003
number_of_timesteps = 500000
report_interval = 500
save_interval = 2500

# Artificial dissipation
add_dissipation = true
dissipation_amount = 1e-4
composite_dissipation = false

# Sponge options
defaults/sponge_amount = 0.2

# Solution limits
enable_solution_limits = true
minimum_density = 0.1
minimum_temperature = 0.05
maximum_density = 5.
maximum_temperature = 4.

# Penalty parameters
defaults/viscous_penalty_amount = 0.

# Immersed Boundary parameters
enable_immersed_boundary = true
immersed_boundary/levelset_type = "cylinder"
immersed_boundary/dissipation_amount = 0.05
immersed_boundary/regularization_parameter = 3.0
immersed_boundary/period = 314.1592
immersed_boundary/location1 = 15.0
immersed_boundary/location2 = 0.0
immersed_boundary/oscillation_direction1 = 1.0
immersed_boundary/oscillation_direction2 = 0.0
immersed_boundary/amplitude = 5.0
immersed_boundary/radius = 0.5
